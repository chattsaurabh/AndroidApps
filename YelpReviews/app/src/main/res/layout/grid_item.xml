<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_item_selector">
    <ImageView
        android:id="@+id/gridItemImageView"
        android:layout_width="@dimen/grid_image_w"
        android:layout_height="@dimen/grid_image_ht"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/gridItemImageView"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemNameTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/grid_item_spacing"/>
        <TextView
            android:id="@+id/itemAliasTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/grid_item_spacing"/>
    </LinearLayout>

</RelativeLayout>