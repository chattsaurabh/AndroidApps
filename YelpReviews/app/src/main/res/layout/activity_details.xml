<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/landing_padding">

    <ProgressBar
        android:id="@+id/detailsProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="@dimen/progress_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/detailsViewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_image_ht"
            android:paddingBottom="@dimen/grid_vertical_spacing"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/detailsName"
            android:layout_below="@+id/detailsViewPager"
            android:textSize="@dimen/details_text_size"
            android:paddingBottom="@dimen/grid_item_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailsAlias"
            android:layout_below="@+id/detailsName"
            android:textSize="@dimen/details_text_size"
            android:paddingBottom="@dimen/grid_item_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailsAddress"
            android:layout_below="@+id/detailsAlias"
            android:textSize="@dimen/details_text_size"
            android:paddingBottom="@dimen/grid_item_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailsPhone"
            android:layout_below="@+id/detailsAddress"
            android:textSize="@dimen/details_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>