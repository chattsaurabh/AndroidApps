<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/VideoPageLinearLayout" 
			  android:layout_width="fill_parent" 
			  android:layout_height="fill_parent" 
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  android:gravity="center_horizontal" 
    		  android:orientation="vertical">
 			<ImageView android:id="@+id/VideoPageHeaderImageView" 
					   android:layout_width="fill_parent" 
					   android:background="@drawable/header" 
					   android:layout_height="150dp">
		    </ImageView>
 			<LinearLayout android:id="@+id/VideoPageListLinearLayout" 
 						  android:layout_height="wrap_content" 
 						  android:layout_width="match_parent">
 					<include layout="@layout/video_page_widget"
			        	     android:id="@+id/VideoPageListItem1"
			        	     android:layout_height="150dp" />
 			</LinearLayout>
			
</LinearLayout>

