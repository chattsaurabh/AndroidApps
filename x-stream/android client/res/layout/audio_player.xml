<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/SeekBarRelativeLayout" 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent" 
				xmlns:android="http://schemas.android.com/apk/res/android">
	  <ImageButton android:id="@+id/PlayPauseImageButton" 
		 android:layout_width="wrap_content" 
		 android:layout_height="wrap_content" 
		 android:background="@drawable/pause" 
		 android:layout_margin="5dp"></ImageButton>
	  <ImageButton android:id="@+id/NextImageButton" 
					 android:layout_width="wrap_content" 
					 android:layout_height="wrap_content" 
					 android:background="@drawable/next_track" 
					 android:layout_margin="5dp"
					 android:layout_toRightOf="@+id/PlayPauseImageButton"></ImageButton>
	  <ImageButton android:id="@+id/AddImageButton" 
					 android:layout_width="wrap_content" 
					 android:layout_height="wrap_content" 
					 android:background="@drawable/add" 
					 android:layout_margin="5dp" 
					 android:layout_alignParentRight="true">
	  </ImageButton>
	  <SeekBar android:id="@+id/AudioPlayerSeekBar" 
		 android:layout_width="match_parent" 
		 android:layout_height="wrap_content" 
		 android:layout_margin="5dp"
		 android:layout_toRightOf="@+id/NextImageButton"
		 android:layout_toLeftOf="@+id/AddImageButton"></SeekBar>
	  
</RelativeLayout>

