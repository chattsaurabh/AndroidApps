<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent" 
			  android:orientation="horizontal">
		<ViewSwitcher android:id="@+id/SearchElementViewSwitcher"
					      android:layout_width="80dp"
					      android:layout_height="80dp"
					      android:background="#000000">
					<ProgressBar android:layout_height="40dp" 
		    				   	 android:layout_width="40dp"
		    				   	 android:background="#000000"
		    				   	 android:id="@+id/SearchElementIconProgress"
		    				   	 android:indeterminate="true"
		    				   	 android:layout_gravity="center">
					</ProgressBar>
    				<ImageView android:layout_width="75dp"
						  	   android:layout_height="75dp"
						  	   android:background="#000000" 
						  	   android:id="@+id/SearchElementIconImageView"
						  	   android:layout_gravity="center" android:scaleType="fitCenter">
					</ImageView>
    	</ViewSwitcher>    	
  	    <TextView android:id="@+id/SearchElementTextView"
				  android:paddingLeft="10dip"
				  android:layout_weight="0.5"
				  android:layout_gravity="center"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content" />  	    
</LinearLayout>
