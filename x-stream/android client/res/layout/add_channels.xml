<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  	<LinearLayout android:layout_width="match_parent" 
    			  android:layout_height="wrap_content" 
    			  android:id="@+id/AddNewChannelLinearLayout" 
    			  android:orientation="horizontal">
    	<com.customwidgets.CustomEditText android:id="@+id/AddNewChannelEditText" 
    									  android:layout_width="200dp" 
    									  android:layout_height="wrap_content"
    									  android:layout_gravity="center_vertical">
    	</com.customwidgets.CustomEditText> 
	    <Button android:text="Add New Channel" 
	    		android:id="@+id/AddChannelButton" 
	    		android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content" android:layout_gravity="center_vertical">
	    </Button>
    </LinearLayout>
    <ListView android:layout_width="fill_parent" 
    		  android:layout_height="wrap_content" 
    		  android:id="@+id/AddChannelsListView"
    		  android:cacheColorHint="#00000000" 
        	  android:background="@drawable/brown_slpash">
    </ListView>   
</LinearLayout>
