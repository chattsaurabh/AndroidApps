<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal" 
			    android:padding="1dp">
    
  
    <ImageView android:id="@+id/newsItemThumbnailImgView"
        	   android:layout_width="@dimen/news_item_width"
        	   android:layout_height="@dimen/news_item_height"
        	   android:background="@drawable/loading_black_1"
        	   android:scaleType="centerCrop"/>
    <TextView android:id="@+id/newsDescTextView"
        	  android:layout_below="@+id/newsItemThumbnailImgView"
        	  android:layout_width="@dimen/news_item_width"
        	  android:layout_height="wrap_content"
        	  android:background="#66000000"
        	  android:paddingBottom="5dp"
        	  android:gravity="center"
        	  android:ellipsize="end"/>

</RelativeLayout>