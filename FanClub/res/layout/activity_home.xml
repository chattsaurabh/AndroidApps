<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity" >

    <LinearLayout
        android:id="@+id/homeLLTop"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical" >

        <include layout="@layout/home_btn_component"
	        	 android:id="@+id/homeVideoBtnComp" />    
        <include layout="@layout/home_btn_component"
	        	 android:id="@+id/homeGossipBtnComp" />        
        <include layout="@layout/home_btn_component"
	        	 android:id="@+id/homePhotosBtnComp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeLLBottom"
        android:padding="20dp"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"        
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <include layout="@layout/home_btn_component"
	        	 android:id="@+id/homeNewsBtnComp" />
        <include layout="@layout/home_btn_component"
	        	 android:id="@+id/homeFanClubBtnComp" />
        <include layout="@layout/home_btn_component"
	        	 android:id="@+id/homeProfileBtnComp" />
    </LinearLayout>

</RelativeLayout>