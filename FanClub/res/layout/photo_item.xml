<?xml version="1.0" encoding="utf-8"?>    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		 android:id="@+id/photoItemFrameLayout"
 		 	 android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
    		 android:orientation="vertical"
    		 android:gravity="center_horizontal" 
		     android:padding="1dp"
		     android:clickable="true">
      
    <ImageView android:id="@+id/photoItemThumbnailImgView"
        	   android:layout_width="@dimen/photos_item_dimen"
        	   android:layout_height="@dimen/photos_item_dimen"
        	   android:background="@drawable/loading_black_1"
        	   android:scaleType="centerCrop"/>
    
    <TextView android:id="@+id/photoItemDesc"
        	  android:layout_width="@dimen/photos_item_dimen"
        	  android:layout_height="@dimen/photo_title_height"
        	  android:layout_below="@+id/photoItemThumbnailImgView"
        	  android:textColor="#FFFFFFFF"
        	  android:visibility="gone"
        	  android:gravity="center"
       	      android:singleLine="true"
		      android:ellipsize="marquee" 
		      android:marqueeRepeatLimit="marquee_forever"
		      android:scrollHorizontally="true"
		      android:paddingLeft="5dp" 
    		  android:paddingRight="5dp"
    		  android:focusable="true" 
		      android:focusableInTouchMode="true" 
		      android:freezesText="true"/>
    
</RelativeLayout>
   

